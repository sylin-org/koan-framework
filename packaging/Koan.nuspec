  <id>Sylin.Koan</id>
  <!-- Version is supplied by the workflow using -Version argument -->
  <version>$version$</version>
    <authors>Sylin Labs</authors>
    <owners>Sylin Labs</owners>
  <license type="expression">Apache-2.0</license>
