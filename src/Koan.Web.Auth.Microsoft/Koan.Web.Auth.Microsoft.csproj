<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Description>Microsoft (Entra ID) auth provider adapter for Koan.Web.Auth (self-registering defaults).</Description>
    <PackageTags>$(CommonPackageTags);auth;microsoft;entra;azuread;oidc;provider</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Koan.Core\Koan.Core.csproj" />
    <ProjectReference Include="..\Koan.Web.Auth\Koan.Web.Auth.csproj" />
  </ItemGroup>
</Project>
