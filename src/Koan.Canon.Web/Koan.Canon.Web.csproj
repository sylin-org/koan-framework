<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Koan.Canon.Web</AssemblyName>
    <RootNamespace>Koan.Canon.Web</RootNamespace>
    <Description>ASP.NET Core surfaces for Koan Canon: controller endpoints, projection management APIs, and health/readiness wiring.</Description>
    <PackageTags>$(CommonPackageTags);canon;web;controllers;projections</PackageTags>
    <Version>0.6.3</Version>
    <AssemblyVersion>0.6.3</AssemblyVersion>
    <FileVersion>0.6.3</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Koan.Core\Koan.Core.csproj" />
    <ProjectReference Include="..\Koan.Canon.Core\Koan.Canon.Core.csproj" />
    <ProjectReference Include="..\Koan.Web\Koan.Web.csproj" />
    <ProjectReference Include="..\Koan.Web.Extensions\Koan.Web.Extensions.csproj" />
  </ItemGroup>
</Project>