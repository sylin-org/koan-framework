<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>Koan.Web.GraphQl</AssemblyName>
    <RootNamespace>Koan.Web.GraphQl</RootNamespace>
    <Description>Koan GraphQL module providing a controller-hosted GraphQL endpoint and schema for IEntity&lt;&gt; types.</Description>
  <PackageTags>$(CommonPackageTags);web;graphql;hotchocolate;controllers</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HotChocolate.AspNetCore" Version="13.8.1" />
    <PackageReference Include="HotChocolate.Execution" Version="13.8.1" />
  <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  <!-- Exclude the Banana Cake Pop UI middleware pulled transitively to keep runtime surface minimal and avoid test-time probe issues -->
  <PackageReference Include="BananaCakePop.Middleware" Version="13.0.0" ExcludeAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Koan.Web\Koan.Web.csproj" />
    <ProjectReference Include="..\Koan.Data.Core\Koan.Data.Core.csproj" />
    <ProjectReference Include="..\Koan.Core\Koan.Core.csproj" />
  </ItemGroup>
</Project>
