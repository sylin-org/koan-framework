<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Description>Data core for Koan: repository primitives, options, and shared helpers for relational and document providers.</Description>
    <PackageTags>$(CommonPackageTags);data;repository;abstractions;options</PackageTags>
    <Version>0.6.2</Version>
    <AssemblyVersion>0.6.2</AssemblyVersion>
    <FileVersion>0.6.2</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Koan.Data.Abstractions\Koan.Data.Abstractions.csproj" />
    <ProjectReference Include="..\Koan.Data.Vector.Abstractions\Koan.Data.Vector.Abstractions.csproj" />
    <ProjectReference Include="..\Koan.Core\Koan.Core.csproj" />
    <ProjectReference Include="..\Koan.Core.Adapters\Koan.Core.Adapters.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.0" />
  </ItemGroup>
</Project>