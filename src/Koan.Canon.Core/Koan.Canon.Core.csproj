<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Koan.Canon.Core</AssemblyName>
    <RootNamespace>Koan.Canon</RootNamespace>
    <Description>Core runtime for Koan Canon: intent orchestration primitives, stage lifecycle, and projection scheduling hooks.</Description>
    <PackageTags>$(CommonPackageTags);canon;orchestration;projection;runtime</PackageTags>
    <Version>0.6.3</Version>
    <AssemblyVersion>0.6.3</AssemblyVersion>
    <FileVersion>0.6.3</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Koan.Core\Koan.Core.csproj" />
    <ProjectReference Include="..\Koan.Data.Core\Koan.Data.Core.csproj" />
    <ProjectReference Include="..\Koan.Messaging.Core\Koan.Messaging.Core.csproj" />
  </ItemGroup>
</Project>