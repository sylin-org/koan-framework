<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Description>HTTP payload transformers for Koan Web: flexible request/response shaping with auto-discovery.</Description>
    <PackageTags>$(CommonPackageTags);web;transformers;middleware;http</PackageTags>
    <Version>0.6.2</Version>
    <AssemblyVersion>0.6.2</AssemblyVersion>
    <FileVersion>0.6.2</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Koan.Web\Koan.Web.csproj" />
    <ProjectReference Include="..\Koan.Core\Koan.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.0" />
  </ItemGroup>
</Project>