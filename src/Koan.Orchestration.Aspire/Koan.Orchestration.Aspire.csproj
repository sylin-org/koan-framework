<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsNotAsErrors />
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Koan.Orchestration.Aspire</PackageId>
    <Title>Koan Framework - Aspire Integration</Title>
    <Description>Distributed Aspire resource registration for Koan Framework modules via KoanAutoRegistrar pattern</Description>
    <Authors>Koan Framework Team</Authors>
    <PackageTags>koan;aspire;orchestration;dotnet;microservices;containers</PackageTags>
    <RepositoryUrl>https://github.com/koan-framework/koan</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Aspire.Hosting" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Koan.Core\Koan.Core.csproj" />
  </ItemGroup>

</Project>