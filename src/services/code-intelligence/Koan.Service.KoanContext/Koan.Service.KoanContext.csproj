<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>Koan.Context</RootNamespace>
    <AssemblyName>Koan.Context</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <!-- Include MCP SDK files (non-standard location) -->
    <Content Include="mcp-sdk\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AspNetCoreRateLimit" Version="5.0.0" />
    <PackageReference Include="Polly" Version="8.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Koan.Core\Koan.Core.csproj" />
    <ProjectReference Include="..\..\..\Connectors\Data\Sqlite\Koan.Data.Connector.Sqlite.csproj" />
    <ProjectReference Include="..\..\..\Koan.Data.Core\Koan.Data.Core.csproj" />
    <ProjectReference Include="..\..\..\Koan.Web\Koan.Web.csproj" />
    <ProjectReference Include="..\..\..\Connectors\Web\Swagger\Koan.Web.Connector.Swagger.csproj" />
    <ProjectReference Include="..\..\..\Koan.Mcp\Koan.Mcp.csproj" />
    <ProjectReference Include="..\..\..\Koan.AI\Koan.AI.csproj" />
    <ProjectReference Include="..\..\..\Koan.Data.Vector\Koan.Data.Vector.csproj" />
    <ProjectReference Include="..\..\..\Connectors\Data\Vector\Weaviate\Koan.Data.Vector.Connector.Weaviate.csproj" />
    <ProjectReference Include="..\..\..\Connectors\AI\Ollama\Koan.AI.Connector.Ollama.csproj" />
    <ProjectReference Include="..\..\..\Koan.Orchestration.Aspire\Koan.Orchestration.Aspire.csproj" />
    <ProjectReference Include="..\..\..\Koan.Scheduling\Koan.Scheduling.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude wwwroot from dotnet watch (UI changes don't restart backend) -->
    <Watch Remove="wwwroot\**\*" />
  </ItemGroup>

</Project>
