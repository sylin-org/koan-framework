<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Description>Comprehensive backup and restore system for Koan Framework applications with streaming, compression, and multi-provider support.</Description>
    <PackageTags>$(CommonPackageTags);backup;restore;data;streaming;compression</PackageTags>
    <Version>0.6.2</Version>
    <AssemblyVersion>0.6.2</AssemblyVersion>
    <FileVersion>0.6.2</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Koan.Data.Core\Koan.Data.Core.csproj" />
    <ProjectReference Include="..\Koan.Data.Abstractions\Koan.Data.Abstractions.csproj" />
    <ProjectReference Include="..\Koan.Storage\Koan.Storage.csproj" />
    <ProjectReference Include="..\Koan.Core\Koan.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.IO.Compression" Version="4.3.0" />
  </ItemGroup>
</Project>