<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Koan.Secrets.Connector.Vault</RootNamespace>
    <AssemblyName>Koan.Secrets.Connector.Vault</AssemblyName>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Description>HashiCorp Vault provider for Koan secrets: HTTP client wiring, health checks, and scoped secret resolution.</Description>
    <PackageTags>$(CommonPackageTags);secrets;vault;hashicorp;configuration</PackageTags>
    <Version>0.6.3</Version>
    <AssemblyVersion>0.6.3</AssemblyVersion>
    <FileVersion>0.6.3</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\Koan.Secrets.Abstractions\Koan.Secrets.Abstractions.csproj" />
    <ProjectReference Include="..\..\..\Koan.Core\Koan.Core.csproj" />
    <ProjectReference Include="..\..\..\Koan.Orchestration.Abstractions\Koan.Orchestration.Abstractions.csproj" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="9.0.8" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>
</Project>