<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Description>Test identity provider for Koan Web Auth: local login UI, token issuance for demos, and development-only wiring.</Description>
    <PackageTags>$(CommonPackageTags);web;auth;test-provider;identity</PackageTags>
    <Version>0.6.3</Version>
    <AssemblyVersion>0.6.3</AssemblyVersion>
    <FileVersion>0.6.3</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.0.2" />
    <PackageReference Include="Microsoft.IdentityModel.Tokens" Version="8.0.2" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="wwwroot\**\*">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
    <!-- Embed login HTML as a fallback when running from published container where content may be trimmed -->
    <EmbeddedResource Include="wwwroot\testprovider-login.html" />
  </ItemGroup>
  <ItemGroup>
  <ProjectReference Include="..\..\..\..\Koan.Web.Auth\Koan.Web.Auth.csproj" />
  <ProjectReference Include="..\..\..\..\Koan.Core\Koan.Core.csproj" />
  </ItemGroup>
</Project>