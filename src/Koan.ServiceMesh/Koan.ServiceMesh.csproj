    <PackageTags>$(CommonPackageTags);services;discovery;mesh;orchestration</PackageTags>
    <Version>0.1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Koan.ServiceMesh.Abstractions\Koan.ServiceMesh.Abstractions.csproj" />
