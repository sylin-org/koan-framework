<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <IsPackable>true</IsPackable>
    <Description>Observability baseline recipe (health checks + OTEL + resilient HttpClient).</Description>
    <PackageTags>$(CommonPackageTags);recipes;observability;health;opentelemetry</PackageTags>
    <Version>0.6.1</Version>
    <AssemblyVersion>0.6.1</AssemblyVersion>
    <FileVersion>0.6.1</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Koan.Recipe.Abstractions\Koan.Recipe.Abstractions.csproj" />
    <ProjectReference Include="..\Koan.Web\Koan.Web.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http.Resilience" Version="9.1.0" />
  </ItemGroup>
</Project>