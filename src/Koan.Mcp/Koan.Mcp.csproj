<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Description>Model Context Protocol integration for Koan entity endpoints: discovery, schema, execution, and transports.</Description>
    <PackageTags>$(CommonPackageTags);mcp;jsonrpc;llm;entity;agent</PackageTags>
    <Version>0.6.3</Version>
    <AssemblyVersion>0.6.3</AssemblyVersion>
    <FileVersion>0.6.3</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="StreamJsonRpc" Version="2.22.11" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="Microsoft.AspNetCore.JsonPatch" Version="9.0.9" />
  <PackageReference Include="Jint" Version="4.4.1" />
  <!-- Explicitly include Acornima to satisfy deps manifest when running tests under net10 preview -->
  <PackageReference Include="Acornima" Version="1.2.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Koan.Core\Koan.Core.csproj" />
    <ProjectReference Include="..\Koan.Data.Core\Koan.Data.Core.csproj" />
    <ProjectReference Include="..\Koan.Web\Koan.Web.csproj" />
  </ItemGroup>
</Project>