<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Koan.Orchestration.Cli</RootNamespace>
    <Description>Command-line interface for Koan orchestration: discover modules, render Compose bundles, and execute provider workflows.</Description>
    <PackageTags>$(CommonPackageTags);cli;orchestration;compose;devhost</PackageTags>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>koan-orchestrate</ToolCommandName>
    <IsPackable>true</IsPackable>
    <Version>0.6.3</Version>
    <AssemblyVersion>0.6.3</AssemblyVersion>
    <FileVersion>0.6.3</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Koan.Orchestration.Abstractions\Koan.Orchestration.Abstractions.csproj" />
    <ProjectReference Include="..\Connectors\Orchestration\Renderers\Compose\Koan.Orchestration.Renderers.Connector.Compose.csproj" />
    <ProjectReference Include="..\Connectors\Orchestration\Docker\Koan.Orchestration.Connector.Docker.csproj" />
    <ProjectReference Include="..\Connectors\Orchestration\Podman\Koan.Orchestration.Connector.Podman.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.Reflection.MetadataLoadContext" Version="9.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
  </ItemGroup>
</Project>
