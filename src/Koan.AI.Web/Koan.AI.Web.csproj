<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Description>Koan AI Web: optional AI controllers/endpoints (chat, embeddings, health) for ASP.NET Core without coupling Koan.Web to AI.</Description>
    <PackageTags>$(CommonPackageTags);web;aspnetcore;controllers;ai;chat;embeddings</PackageTags>
    <Version>0.6.1</Version>
    <AssemblyVersion>0.6.1</AssemblyVersion>
    <FileVersion>0.6.1</FileVersion>
  </PropertyGroup>
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  <ItemGroup>
    <Using Include="Koan.Core" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Koan.AI\Koan.AI.csproj" />
    <ProjectReference Include="..\Koan.AI.Contracts\Koan.AI.Contracts.csproj" />
  </ItemGroup>
</Project>