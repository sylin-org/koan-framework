{
  "Koan": {
    "Data": {
      "Default": "sqlite"
    },
    "Mcp": {
      "EnableStdioTransport": true,
      "EnableHttpSseTransport": true,
      "HttpSseRoute": "/mcp",
      "EnableCors": true,
      "AllowedOrigins": [ "http://localhost:5173", "http://localhost:3000" ],
      "PublishCapabilityEndpoint": true,
      "RequireAuthentication": false,
      "Exposure": "full",
      "CodeMode": {
        "Enabled": true,
        "Runtime": "Jint",
        "PublishSdkEndpoint": true,
        "Sandbox": {
          "CpuMilliseconds": 3000,
          "MemoryMegabytes": 128,
          "MaxRecursionDepth": 150
        }
      }
    }
  },
  "ConnectionStrings": {
    "sqlite": "Data Source=pantrypal.db"
  },
  "Koan:Storage": {
    "Profiles": {
      "photos": {
        "Provider": "local",
        "Container": "pantry-photos"
      }
    },
    "DefaultProfile": "photos",
    "FallbackMode": "SingleProfileOnly"
  },
  "S16": {
    "Photos": {
      "Profile": "photos",
      "Container": "pantry-photos",
      "Prefix": "photos/"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Koan": "Debug"
    }
  },
  "AllowedHosts": "*"
}
