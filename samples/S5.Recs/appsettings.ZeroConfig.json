{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "S5": {
    "Recs": {
      "ImplicitPreferences": {
        "WeightMin": 0.0,
        "WeightMax": 0.3,
        "TagsMax": 3,
        "DiversityWeight": 0.1
      },
      "TmdbApiKey": ""
    }
  },
  "Koan": {
    "Data": {
      "Json": {
        "BasePath": "./data"
      },
      "Mongo": {
        "ConnectionString": "mongodb://mongodb:27017"
      },
      "Vector": {
        "Provider": "Weaviate",
        "DefaultCollection": "media_embeddings"
      },
      "Weaviate": {
        "Endpoint": "http://weaviate:8080"
      }
    },
    "AI": {
      "Provider": "Ollama",
      "DefaultModel": "llama3.2:3b",
      "Ollama": {
        "Endpoint": "http://ollama:11434",
        "EmbeddingModels": [
          "all-minilm"
        ]
      }
    }
  }
}