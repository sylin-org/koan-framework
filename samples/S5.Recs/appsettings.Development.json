{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Information",
      "Koan": "Debug",
      "S5.Recs": "Debug"
    }
  },
  "Koan": {
    "Data": {
      "Mongo": {
        "ConnectionString": "mongodb://localhost:5081",
        "Database": "Koan"
      },
      "Weaviate": {
        "Endpoint": "http://localhost:5082"
      }
    },
    "Ai": {
      "Ollama": {
        "RequiredModels": [
          "all-minilm"
        ]
      }
    },
    "Web": {
      "Auth": {
        "TestProvider": {
          "UseJwtTokens": true,
          "JwtIssuer": "koan-s5-recs-dev",
          "JwtAudience": "s5-recs-client",
          "JwtExpirationMinutes": 120,
          "EnableClientCredentials": true,
          "AllowedScopes": ["recommendations:read", "recommendations:write", "analytics:write", "ml:inference"],
          "RegisteredClients": {
            "s5-recs-backend": {
              "ClientId": "s5-recs-backend",
              "ClientSecret": "dev-secret-s5-recs-backend",
              "AllowedScopes": ["recommendations:read", "recommendations:write", "analytics:write"],
              "Description": "S5.Recs Backend Service"
            },
            "ai-service": {
              "ClientId": "ai-service",
              "ClientSecret": "dev-secret-ai-service",
              "AllowedScopes": ["ml:inference", "analytics:write"],
              "Description": "AI/ML Processing Service"
            }
          }
        },
        "Services": {
          "TokenEndpoint": "/.testoauth/token",
          "ClientId": "s5-recs-backend",
          "ClientSecret": "dev-secret-s5-recs-backend",
          "DefaultScopes": ["recommendations:read"]
        }
      }
    }
  }
  ,
  "S5": {
    "Recs": {
      "Tags": {
        "CensorTags": [
          "ecchi",
          "hentai",
          "smut",
          "nsfw"
        ]
      }
    }
  }
}
