{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Koan": {
    "Mcp": {
      "EnableHttpSseTransport": true,
      "HttpSseRoute": "/mcp",
      "RequireAuthentication": false
    }
  },
  "DocMind": {
    "Storage": {
      "BasePath": "uploads",
      "MaxFileSizeBytes": 20971520
    },
    "Processing": {
      "QueueCapacity": 64,
      "MaxConcurrency": 4,
      "ChunkSizeTokens": 800,
      "EnableVisionExtraction": true
    },
    "Ai": {
      "DefaultModel": "llama3",
      "EmbeddingModel": "nomic-embed-text",
      "VisionModel": "llava"
    }
  }
}